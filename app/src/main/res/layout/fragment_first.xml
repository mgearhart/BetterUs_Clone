<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".FirstFragment" android:backgroundTint="#73F3AB" android:foregroundTint="#EF5454">
    <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp" android:background="@drawable/gradient">

        <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="354dp"
                android:layout_height="123dp"
                android:id="@+id/progressBar1"
                android:foregroundTint="#E91E63"
                android:indeterminateTint="#DA4949" android:scaleY="13" android:progressTint="#43EA1D"
                android:progressBackgroundTint="#2575D6" android:max="100" android:progress="75"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="384dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:layout_width="356dp"
                android:layout_height="69dp" android:id="@+id/textView1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="436dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="31dp" app:layout_constraintHorizontal_bias="0.68"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="356dp"
                android:layout_height="104dp"
                android:id="@+id/progressBar5"
                android:max="100" android:progress="25" android:scaleY="13"
                android:progressTint="#FD3232" android:progressBackgroundTint="#2575D6"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="124dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
        <TextView
                android:layout_width="241dp"
                android:layout_height="70dp" android:id="@+id/textView3"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                android:layout_marginEnd="107dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="304dp"
                app:layout_constraintHorizontal_bias="0.888"/>
        <TextView
                android:layout_width="203dp"
                android:layout_height="45dp" android:id="@+id/textView4"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="188dp"/>
        <TextView
                android:text="Exercise"
                android:layout_width="201dp"
                android:layout_height="58dp" android:id="@+id/textView"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="533dp"
                app:layout_constraintTop_toTopOf="@+id/progressBar1" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="100dp" app:layout_constraintVertical_bias="0.321"/>
        <TextView
                android:text="Diet"
                android:layout_width="185dp"
                android:layout_height="60dp" android:id="@+id/textView5"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="136dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="332dp"/>
        <TextView
                android:text="Meditation"
                android:layout_width="250dp"
                android:layout_height="70dp" android:id="@+id/textView6"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="412dp"
                android:layout_marginEnd="36dp" app:layout_constraintEnd_toEndOf="parent"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="354dp"
                android:layout_height="125dp"
                android:id="@+id/progressBar4"
                android:scaleY="13" android:progressTint="#2562FA"
                android:progressBackgroundTint="#2575D6" android:max="100" android:progress="50"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="248dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
        <TextView
                android:text="BetterUs"
                android:layout_width="239dp"
                android:layout_height="78dp" android:id="@+id/textView2"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:fontFamily="sans-serif-black" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="60dp"
                android:layout_marginTop="60dp"/>
        <Button
                android:text="Food"
                android:layout_width="104dp"
                android:layout_height="56dp" android:id="@+id/button_second"
                android:backgroundTint="#2553C6"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
        <Button
                android:id="@+id/button_first"
                android:layout_width="104dp"
                android:layout_height="56dp"
                android:backgroundTint="#DAA2E657" android:text="Fun"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintEnd_toStartOf="@+id/button_second"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"/>
        <Button
                android:text="Relax"
                android:layout_width="107dp"
                android:layout_height="57dp" android:id="@+id/button"
                android:backgroundTint="#F15E5E"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintStart_toEndOf="@+id/button_second" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="632dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"/>
        <ImageView
                android:src="@drawable/ic_launcher_foreground"
                android:layout_width="72dp"
                android:layout_height="73dp" android:id="@+id/imageView4"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
        <Button
                android:text="Find Food"
                android:layout_width="153dp"
                android:layout_height="62dp" android:id="@+id/button_third"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="56dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>