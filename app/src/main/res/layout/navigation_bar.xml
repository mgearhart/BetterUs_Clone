<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:layout_gravity="bottom"
    android:background="@color/pop_up_background"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/navBar"
        android:layout_height="80dp"
        android:layout_width="380dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="30dp"
        >

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            >

            <FrameLayout
                android:id="@+id/recommendationButton"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                >

<!--                <FrameLayout-->
<!--                    android:id="@+id/recoTopColor"-->
<!--                    android:layout_height="5dp"-->
<!--                    android:layout_width="45dp"-->
<!--                    android:background="@color/navBarButtonUnPressed"-->
<!--                    android:layout_gravity="center_horizontal"-->
<!--                />-->

                <ImageView
                    android:id="@+id/recoImage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/checked"
                    android:layout_gravity="center"
                    android:layout_marginBottom="9dp"
                    app:tint="@color/navBarButtonUnPressed"
                />

                <TextView
                    android:id="@+id/recoText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/recommend"
                    android:textColor="@color/navBarButtonUnPressed"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center_horizontal"
                />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/exerciseButton"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                >

                <ImageView
                    android:id="@+id/actImage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/runner"
                    android:layout_gravity="center"
                    android:layout_marginBottom="9dp"
                    app:tint="@color/navBarButtonUnPressed"
                />

                <TextView
                    android:id="@+id/actText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/activities"
                    android:textColor="@color/navBarButtonUnPressed"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center_horizontal"
                />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/homeButton"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                >

                <ImageView
                    android:id="@+id/homeImage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/home"
                    android:layout_gravity="center"
                    android:layout_marginBottom="9dp"
                    app:tint="@color/navBarButtonUnPressed"
                />

                <TextView
                    android:id="@+id/homeText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/home"
                    android:textColor="@color/navBarButtonUnPressed"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center_horizontal"
                />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/foodButton"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
            >

                <ImageView
                    android:id="@+id/foodImage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/nutrition"
                    android:layout_gravity="center"
                    android:layout_marginBottom="9dp"
                    app:tint="@color/navBarButtonUnPressed"
                />

                <TextView
                    android:id="@+id/foodText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/food"
                    android:textColor="@color/navBarButtonUnPressed"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center_horizontal"
                />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/settingsButton"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                >

                <ImageView
                    android:id="@+id/settingsImage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/settings"
                    android:layout_gravity="center"
                    android:layout_marginBottom="9dp"
                    app:tint="@color/navBarButtonUnPressed"
                />

                <TextView
                    android:id="@+id/settingsText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/settings"
                    android:textColor="@color/navBarButtonUnPressed"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center_horizontal"
                />
            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>