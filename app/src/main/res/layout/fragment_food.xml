<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".pages.Food"
    android:background="@color/tutorial_page_background"
    >

    <ImageView
        android:id="@+id/blueBlob"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/blue_blob"
        android:layout_centerHorizontal="true"
    />

    <androidx.cardview.widget.CardView
        android:id="@+id/gifRoundCard"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="160dp"
        app:cardCornerRadius="10dp"
        >

        <ImageView
            android:id="@+id/gifImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/food"
        />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yourFood"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:layout_below="@+id/blueBlob"
    />

    <Spinner
        android:id="@+id/mealSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="310dp"
        android:layout_marginStart="140dp"
    />

    <TextView
        android:id="@+id/mealText"
        android:text="@string/meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="308dp"
        android:layout_marginStart="40dp"
        android:textColor="@color/white"
    />

    <TextView
        android:id="@+id/ingredients"
        android:text="@string/ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/mealText"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:visibility="gone"
    />

    <TextView
        android:id="@+id/ingredientsText"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@+id/ingredients"
        android:layout_marginTop="5dp"
        android:layout_marginStart="70dp"
    />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:background="@drawable/button_soft_disabled"
        android:layout_marginStart="20dp"
        android:text="@string/eatButtonText"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@color/button_disabled_text"
        android:layout_marginTop="620dp"
    />
</RelativeLayout>